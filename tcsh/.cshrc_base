#! /usr/bin/env tcsh

# disable core dump generation.
limit coredumpsize 0

# set default CD path.
set cdpath = ~

# set default file permissions
umask 022

# disable path search hashing
unhash

# interactive shell configuration
if ($?prompt) then
    # set history size
    set history = 100

    # enable filename completion
    set filec

    # set to notify job status change immediately
    # set notify

    # ignore EOF (^D) for this shell
    set ignoreeof

    # set default pager
    setenv PAGER /usr/bin/less

    # vim configuration; enable auto-indent
    setenv EXINIT "set ai"

    # setup to print custom prompt banner
    set NO_COLOR="\033[0m"
    set LIGHT_BLUE="\033[1;34m"
    set YELLOW="\033[1;33m"
    alias precmd "${HOME}/bin/setup_prompt.sh"
    set prompt="%{${YELLOW}%}-%{${LIGHT_BLUE}%}>%{${NO_COLOR}%} "
    # set prompt2=${prompt}
    set prompt2="%{${YELLOW}%}-%{${LIGHT_BLUE}%}>%{${NO_COLOR}%} "
endif

# add custom aliases
if ( -e ~/.csh_aliases ) then
        source ~/.csh_aliases
endif
