#!/usr/bin/env bash

unset SESSION_MANAGER

# setup LSF environment
source /tools/support/lsf/conf/profile.lsf
export LBS_BASE_SYSTEM=LBS_LSF
export LBS_CLUSTER_MASTER="bwrcrdsl-2.eecs.berkeley.edu"

bsub -Is -XF -R "select[hname!='bwrcr720-5.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-6.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-12.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-13.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-14.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-2.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-3.eecs.berkeley.edu']" \
-R "select[hname!='bwrcr720-1.eecs.berkeley.edu']" \
"xterm" &
