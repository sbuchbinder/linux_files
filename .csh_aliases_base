#! /usr/bin/env tcsh

# standard aliases
alias rm 'rm -i' 
alias mv 'mv -i'
alias cp 'cp -i'
alias ls 'ls --color=auto'
alias l. 'ls -d .* --color=auto'
alias so 'source'
alias ssh 'ssh -XY'

# utility aliases
alias gitlso 'git ls-files --others --exclude-standard'
alias mycfg 'git --git-dir=${HOME}/.mycfg --work-tree=${HOME}'


